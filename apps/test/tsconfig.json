{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "types": [
      "vitest/globals",
      "node"
    ],
    "paths": {
      "@konoplayer/core/*": [
        "../../packages/core/src/*"
      ],
      "@konoplayer/matroska/*": [
        "../../packages/matroska/src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/matroska"
    }
  ]
}